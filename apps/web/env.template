# Supabase Configuration
# Copy this file to .env and fill in your values

# Supabase Project URL
VITE_SUPABASE_URL=your-project-url.supabase.co

# Supabase Anon/Public Key (safe to use in frontend)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ==================================================
# FEATURE FLAGS
# ==================================================

# AI-Generated Label Art (Per-User Feature)
# Enables the "Generate Label Art" button for users with ai_label_art_enabled=true in database
# Set to 'true' to enable globally (still requires per-user database flag)
VITE_FEATURE_GENERATED_LABEL_ART=true

# ==================================================
# LOCAL DEVELOPMENT
# ==================================================
# When running locally with `npx supabase start`, use:
# VITE_SUPABASE_URL=http://127.0.0.1:54321
# VITE_SUPABASE_ANON_KEY=<key from supabase start output>

